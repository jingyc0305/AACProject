<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/room_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_marginTop="28dp">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent">
        <Button
                android:text="添加"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/add_btn" android:layout_weight="1"/>
        <Button
                android:text="删除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/delete_btn" android:layout_weight="1"/>
        <Button
                android:text="修改"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/update_btn" android:layout_weight="1"/>
        <Button
                android:text="删除表"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/delete_all_btn"/>
    </LinearLayout>

</LinearLayout>