<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/room_recycle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:padding="8dp"
            android:layout_marginTop="28dp">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
        <Button
                android:text="添加"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/green_dao_add_btn" android:layout_weight="1"/>
        <Button
                android:text="删除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/green_dao_delete_btn" android:layout_weight="1"/>
        <Button
                android:text="修改"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/green_dao_update_btn" android:layout_weight="1"/>
        <Button
                android:text="删除表"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/green_dao_delete_all_btn"/>
    </LinearLayout>
    <TextView
            android:text="GreenDao数据库"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" android:id="@+id/textView2"/>

</LinearLayout>